@using NestTask.ViewModels.Authorization
@model SignInVM
@{
    ViewData["Title"] = "SignIn";
}

<div class="page-content pt-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Create an Account</h1>
                                    <p class="mb-30">Hesab lazimdir? <a asp-action="Register">Qeydiyyatdan kec</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group">
                                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="İstifadəçi adı ve ya emaili">
                                        <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" placeholder="Parolunuz">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div>
                                        <label asp-for="RememberMe" class="form-check-label mr-10">Yadda saxla</label>
                                        <input asp-for="RememberMe" class="form-check-input">
                                        <span class="text-danger" asp-validation-for="RememberMe"></span>
                                    </div>
                                    <div class="form-group mb-30">
                                        <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Submit &amp; Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

